<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:translationZ="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="2dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#aae9aaee"
            android:orientation="vertical"
            app:behavior_hideable="true"
            app:behavior_peekHeight="500dp"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/fold_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:background="@color/white"
                    android:text="「これは十文字だ」,「これは十文字だ」,「これは十文字だ」,「これは十文字だ」,「これは十文字だ」,「これは十文字だ」,「これは十文字だ」,「これは十文字だ」,"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/read_more_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="...もっと見る"
                    android:textSize="15sp"
                    android:lineHeight="15sp"
                    android:textColor="@color/teal_200"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fold_text_button"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:text="Random String"
                android:textSize="12sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/answer_line_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Menu"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/answer_three_line_height_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="Menu"
                android:textSize="18sp" />


            <io.github.glailton.expandabletextview.ExpandableTextView
                android:id="@+id/text_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                expandableTextView:collapsedLines="2"
                expandableTextView:animDuration="500"
                expandableTextView:readMoreText="もっと読む"
                expandableTextView:readLessText="折りたたむ"
                expandableTextView:textMode="line"
                expandableTextView:isExpanded="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="「これは十文字だ」, this is 21 characters, 「これは十文字だ」, this is 21 characters, 「これは十文字だ」, this is 21 characters, 「これは十文字だ」, this is 21 characters, 「これは十文字だ」, this is 21 characters, "
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="Menu"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="Menu"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>